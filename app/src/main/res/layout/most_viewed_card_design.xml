<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="151dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/CV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/mv_image"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:background="@drawable/round_outline"
                android:src="@drawable/mc_donalds"
                android:scaleType="fitXY" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/mv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="McDonald's"
            android:layout_toRightOf="@id/CV"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/baloo" />

        <RatingBar
            android:id="@+id/mv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@id/mv_title"
            android:theme="@style/RatingBar"
            android:layout_toRightOf="@id/CV"
            android:layout_marginLeft="10dp"
            android:rating="4" />

        <TextView
            android:id="@+id/mv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bdhesdvihfehifbdhfvbhufvhcvdshuvshvshfvehvschsvsehcsh"
            android:layout_below="@id/mv_rating"
            android:layout_toRightOf="@id/CV"
            android:padding="10dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>