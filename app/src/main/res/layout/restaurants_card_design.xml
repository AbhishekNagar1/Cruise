<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_margin="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/r_image"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:src="@drawable/mc_donalds"
                android:scaleType="fitXY"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/r_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="McDonald's"
            android:layout_toRightOf="@id/c1"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/baloo" />

        <RatingBar
            android:id="@+id/r_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@id/r_title"
            android:theme="@style/RatingBar"
            android:layout_toRightOf="@id/c1"
            android:layout_marginLeft="10dp"
            android:rating="4" />

        <TextView
            android:id="@+id/r_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bdhesdvihfehifbdhfvbhufvhcvdshuvshvshfvehvschsvsehcsh"
            android:layout_below="@id/r_rating"
            android:layout_toRightOf="@id/c1"
            android:padding="10dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>